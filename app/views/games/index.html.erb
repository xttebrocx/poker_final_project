<div>
  <div>
    <h1>
      List of all games
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new game
    </h2>

    <form action="/insert_game" method="post">
      <div>
        <label for="game_bank_box">
          Game bank
        </label>

        <input type="text" id="game_bank_box" name="query_game_bank">
      </div>

      <div>
        <label for="big_blind_box">
          Big blind
        </label>

        <input type="text" id="big_blind_box" name="query_big_blind">
      </div>

      <div>
        <label for="small_blind_box">
          Small blind
        </label>

        <input type="text" id="small_blind_box" name="query_small_blind">
      </div>

      <div>
        <label for="game_owner_box">
          Game owner
        </label>

        <input type="text" id="game_owner_box" name="query_game_owner">
      </div>

      <div>
        <label for="game_name_box">
          Game name
        </label>

        <input type="text" id="game_name_box" name="query_game_name">
      </div>

      <button>
        Create game
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Game bank
        </th>

        <th>
          Big blind
        </th>

        <th>
          Small blind
        </th>

        <th>
          Game owner
        </th>

        <th>
          Game name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_games.each do |a_game| %>
      <tr>
        <td>
          <%= a_game.id %>
        </td>

        <td>
          <%= a_game.game_bank %>
        </td>

        <td>
          <%= a_game.big_blind %>
        </td>

        <td>
          <%= a_game.small_blind %>
        </td>

        <td>
          <%= a_game.game_owner %>
        </td>

        <td>
          <%= a_game.game_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_game.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_game.updated_at) %> ago
        </td>

        <td>
          <a href="/games/<%= a_game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
