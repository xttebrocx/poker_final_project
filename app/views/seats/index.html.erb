<div>
  <div>
    <h1>
      List of all seats
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new seat
    </h2>

    <form action="/insert_seat" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="game_id_box">
          Game
        </label>

        <input type="text" id="game_id_box" name="query_game_id">
      </div>

      <button>
        Create seat
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Game
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_seats.each do |a_seat| %>
      <tr>
        <td>
          <%= a_seat.id %>
        </td>

        <td>
          <%= a_seat.user_id %>
        </td>

        <td>
          <%= a_seat.game_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_seat.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_seat.updated_at) %> ago
        </td>

        <td>
          <a href="/seats/<%= a_seat.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
