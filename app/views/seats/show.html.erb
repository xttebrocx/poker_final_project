<div>
  <div>
    <h1>
      Seat #<%= @the_seat.id %> details
    </h1>

    <div>
      <div>
        <a href="/seats">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_seat/<%= @the_seat.id %>">
          Delete seat
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_seat.user_id %>
      </dd>

      <dt>
        Game
      </dt>
      <dd>
        <%= @the_seat.game_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_seat.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_seat.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit seat
    </h2>

    <form action="/modify_seat/<%= @the_seat.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_seat.user_id %>">
      </div>

      <div>
        <label for="game_id_box">
          Game
        </label>

        <input type="text" id="game_id_box" name="query_game_id" value="<%= @the_seat.game_id %>">
      </div>

      <button>
        Update seat
      </button>
    </form>
  </div>
</div>

<hr>
